# === Core Configuration ===
#
# These settings form the base configuration. The defaults (implied in code) work for Docker.
# Override these if you need specific local paths or external services.

# Django
# DJANGO_SECRET_KEY=dev-secret-key
# DJANGO_DEBUG=True
# DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
# DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173
# DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:4173

# Database (PostgreSQL)
# POSTGRES_DB=laserslicer
# POSTGRES_USER=laserslicer
# POSTGRES_PASSWORD=devpassword
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# Cache & Queue (Redis)
# REDIS_HOST=redis
# REDIS_PORT=6379
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# === Data & Storage Paths ===
#
# Paths for storing elevation data, caches, and intermediate files.
# In Docker, these are mapped to volumes.

# TILE_CACHE_DIR=/app/data/srtm_cache
# ALTI3D_CACHE_DIR=/app/data/alti3d_cache
# BATHY_CACHE_DIR=/app/data/bathy_cache
# OSM_CACHE_DIR=/app/data/osm_cache
# DEBUG_IMAGE_PATH=/app/data/debug_images
# MEDIA_ROOT=/app/media
# SVG_TMP_DIR=/app/tmp/svg_tmp

# === External Services & Tools ===

# User Agent for OSM/Nominatim (Required by OSM Usage Policy)
USER_AGENT=laser-slicer/3.0 (change-me@example.com)

# Helper tool for SwissALTI3D
# ALTI3D_DOWNLOADER=alti3d-downloader

# === Frontend Integration ===

# URL where the frontend can reach the backend API
VITE_API_URL=http://localhost:8000
